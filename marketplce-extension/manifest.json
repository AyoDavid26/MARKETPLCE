{
    "manifest_version": 3,
    "name": "Marketplce Price Comparison",
    "version": "1.0",
    "description": "Compare prices across various platforms seamlessly.",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "permissions": [
      "webNavigation",
      "scripting",
      "activeTab"
    ],
    "host_permissions": [
      "*://*/*"
    ],
    "content_scripts": [
      {
        "matches": [
          "https://www.amazon.com/*",
          "https://www.ebay.com/*",
          "https://www.walmart.com/*",
          "https://www.shopify.com/*",
          "https://www.alibaba.com/*"
        ],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    }
}
