{
  "manifest_version": 3,
  "name": "Price Comparator",
  "version": "1.0",
  "description": "Compare prices across various online marketplaces.",
  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "https://*.amazon.com/*",
    "https://*.ebay.com/*",
    "https://*.google.com/*",
    "https://*.shopify.com/*",
    "https://*.alibaba.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*",
        "https://*.ebay.com/*",
        "https://*.google.com/*",
        "https://*.shopify.com/*",
        "https://*.alibaba.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
